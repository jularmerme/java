<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration SYSTEM "https://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<!-- DTD stands for Document Type Definition -->

<hibernate-configuration>
	<session-factory>
		<!-- Making sure the dialect points to Postgres -->
		<property name="hibernate=dialect">org.hibernate.dialect.PostgresSQLDialect</property>
		
		<!-- This is pointing to the PostgreSQL driver dependency in our pom.xml -->
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		
		<!-- Setting our JDBC connections credentials -->
		<!-- Make sure you put this file in .gitignore for your repo -->
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">postgres</property>
	</session-factory>
</hibernate-configuration>